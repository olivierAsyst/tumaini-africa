<script>
  (() => {
    const carousel = document.getElementById('carouselpoint');
    const dotsContainer = document.getElementById('dots');
    const items = carousel.querySelectorAll('.weekly3-single');
    const itemWidth = items[0].offsetWidth + parseInt(getComputedStyle(carousel).gap || 0);
    let currentIndex = 0;

    // Création dynamique des dots avec ID uniques
    items.forEach((_, i) => {
      const dot = document.createElement('button');
      dot.type = "button";
      dot.id = `carousel-dot-${i}`;
      dot.setAttribute('aria-label', `Slide ${i + 1}`);
      dot.className = `
        w-3 h-3 rounded-full bg-gray-400 transition-all duration-300
        hover:bg-green-600
        focus:outline-none
      `;
      dotsContainer.appendChild(dot);

      // Clic sur dot : scroll vers l'item correspondant
      dot.addEventListener('click', () => {
        currentIndex = i;
        scrollToIndex(currentIndex);
        updateDots();
      });
    });

    const dots = dotsContainer.querySelectorAll('button');

    function updateDots() {
      dots.forEach((dot, i) => {
        if (i === currentIndex) {
          dot.classList.remove('w-3', 'h-3', 'rounded-full', 'bg-gray-400');
          dot.classList.add('w-8', 'h-3', 'rounded-full', 'bg-green-600'); // point plus large horizontalement
          dot.setAttribute('aria-current', 'true');
        } else {
          dot.classList.add('w-3', 'h-3', 'rounded-full', 'bg-gray-400');
          dot.classList.remove('w-8', 'h-3', 'bg-green-600');
          dot.removeAttribute('aria-current');
        }
      });
    }

    function scrollToIndex(index) {
      carousel.scrollTo({
        left: itemWidth * index,
        behavior: 'smooth'
      });
    }

    // Mise à jour auto des dots au scroll manuel
    let scrollTimeout;
    carousel.addEventListener('scroll', () => {
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        const scrollLeft = carousel.scrollLeft;
        currentIndex = Math.round(scrollLeft / itemWidth);
        updateDots();
      }, 100);
    });

    // Initialisation
    updateDots();
  })();
</script>
