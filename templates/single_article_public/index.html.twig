{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}
{% block meta %}
    {{ parent() }}
    {# <meta name="description" content="{{ article.content|striptags|u.truncate(160, '...') }}"> #}
    
    {# Open Graph / Facebook #}
    <meta property="og:type" content="article">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:title" content="{{ article.title }}">
    {# <meta property="og:description" content="{{ article.content|striptags|u.truncate(160, '...') }}"> #}
    {% if article.imageUrl %}
    <meta property="og:image" content="{{ absolute_url(asset('uploads/articles/' ~ article.imageUrl)) }}">
    {% endif %}
    
    {# Twitter Card #}
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ article.title }}">
    {# <meta name="twitter:description" content="{{ article.content|striptags|u.truncate(160, '...') }}"> #}
{% endblock %}
{% block body %}
<div class="fade-in">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Category Badge -->
        <div class="slide-in-left">
            <div class="flex items-center space-x-2 mb-6">
                {# <span class="bg-leparisien-red text-white px-3 py-1 text-sm font-semibold rounded-full">
                    {{ article.category }}
                </span> #}
                <span class="text-gray-600 text-sm">{{ article.category.name }}</span>
                <span class="text-gray-400">•</span>
                <span class="text-leparisien-blue font-semibold text-sm">PSG</span>
            </div>
        </div>

        <!-- Title -->
        <header class="mb-8 slide-in-right">
            <h1 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 leading-tight mb-4 hover:text-leparisien-red transition-colors duration-300">
                {{ article.title }}
            </h1>
            
            {# <h2 class="text-xl md:text-2xl text-gray-700 font-serif leading-relaxed mb-6">
                {{ article.subtitle }}
            </h2> #}
            
            <!-- Article Meta -->
            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 pb-6 border-b border-gray-200">
                <div class="flex items-center space-x-2">
                    <i data-feather="user" class="w-4 h-4"></i>
                    <span class="font-medium text-gray-900">{{ article.author.firstname ~" "~ article.author.lastname }}</span>
                    <span>Journaliste independant</span>
                </div>
                <div class="flex items-center space-x-2">
                    <i data-feather="calendar" class="w-4 h-4"></i>
                    <time datetime="{{ article.publishedAt|date('c') }}">
                        {{ article.publishedAt|date('d/m/Y à H:i') }}
                    </time>
                </div>
                <div class="flex items-center space-x-2">
                    <i data-feather="clock" class="w-4 h-4"></i>
                    <span>3 min de lecture</span>
                </div>
                {% if article.updatedAt > article.publishedAt %}
                <div class="flex items-center space-x-2 text-orange-600">
                    <i data-feather="edit" class="w-4 h-4"></i>
                    <span>Mis à jour le {{ article.updatedAt|date('d/m/Y à H:i') }}</span>
                </div>
                {% endif %}
            </div>
        </header>

        <!-- Social Sharing -->
        <div class="flex items-center justify-between mb-8 slide-in-up" x-data="{ shared: false }">
            <div class="flex items-center space-x-4">
                <span class="text-sm font-medium text-gray-700">Partager :</span>
                <button @click="shared = true; setTimeout(() => shared = false, 2000)" 
                        class="flex items-center space-x-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-all duration-300 transform hover:scale-105">
                    <i data-feather="facebook" class="w-4 h-4"></i>
                    <span class="hidden sm:inline">Facebook</span>
                </button>
                <button @click="shared = true; setTimeout(() => shared = false, 2000)" 
                        class="flex items-center space-x-2 bg-blue-400 text-white px-4 py-2 rounded-lg hover:bg-blue-500 transition-all duration-300 transform hover:scale-105">
                    <i data-feather="twitter" class="w-4 h-4"></i>
                    <span class="hidden sm:inline">Twitter</span>
                </button>
                <button @click="shared = true; setTimeout(() => shared = false, 2000)" 
                        class="flex items-center space-x-2 bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-all duration-300 transform hover:scale-105">
                    <i data-feather="link" class="w-4 h-4"></i>
                    <span class="hidden sm:inline">Copier</span>
                </button>
            </div>
            <div x-show="shared" 
                 x-transition:enter="transition ease-out duration-300"
                 x-transition:enter-start="opacity-0 scale-90"
                 x-transition:enter-end="opacity-100 scale-100"
                 x-transition:leave="transition ease-in duration-200"
                 x-transition:leave-start="opacity-100 scale-100"
                 x-transition:leave-end="opacity-0 scale-90"
                 class="bg-green-100 text-green-800 px-3 py-1 rounded-lg text-sm font-medium">
                Partagé !
            </div>
        </div>

        <!-- Main Image -->
        <figure class="mb-8 zoom-in">
            <div class="relative overflow-hidden rounded-lg shadow-lg group">
                <img src="{{ article.imageUrl }}" 
                     alt="{{ article.title }}" 
                     class="w-full h-64 md:h-96 object-cover transition-transform duration-700 group-hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            <figcaption class="mt-3 text-sm text-gray-600 italic">
                Illustration en image
            </figcaption>
        </figure>

        <!-- Article Content -->
        <div class="prose prose-lg max-w-none">
            {# {% for block in article.content|raw %}
                {% if block.type == 'paragraph' %}
                    <p class="text-gray-900 leading-relaxed mb-6 font-serif text-lg slide-in-content">
                        {{ block.text }}
                    </p>
                {% elseif block.type == 'heading' %}
                    <h3 class="text-2xl font-serif font-bold text-gray-900 mt-8 mb-4 slide-in-content">
                        {{ block.text }}
                    </h3>
                {% elseif block.type == 'quote' %}
                    <blockquote class="border-l-4 border-leparisien-red bg-gray-50 p-6 my-8 slide-in-content">
                        <p class="text-xl font-serif italic text-gray-800 mb-3">
                            "{{ block.text }}"
                        </p>
                        <cite class="text-gray-600 font-medium">— {{ block.author }}</cite>
                    </blockquote>
                {% endif %}
            {% endfor %} #}
            {{ article.content|raw }}
        </div>

        <!-- Tags -->
        <div class="mt-12 pt-6 border-t border-gray-200 slide-in-up">
            <h4 class="text-sm font-semibold text-gray-700 mb-3">Mots-clés :</h4>
            <div class="flex flex-wrap gap-2">
                {# {% for tag in article.tags %}
                    <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-leparisien-red hover:text-white transition-all duration-300 cursor-pointer">
                        {{ tag }}
                    </span>
                {% endfor %} #}
                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-leparisien-red hover:text-white transition-all duration-300 cursor-pointer">
                    Uvira
                </span>
                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-leparisien-red hover:text-white transition-all duration-300 cursor-pointer">
                    Christian
                </span>
                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-leparisien-red hover:text-white transition-all duration-300 cursor-pointer">
                    RDC
                </span>
                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-leparisien-red hover:text-white transition-all duration-300 cursor-pointer">
                    Autres
                </span>
            </div>
        </div>
    </article>

    <!-- Related Articles -->
    <section class="bg-gray-50 py-12 mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h3 class="text-2xl font-serif font-bold text-gray-900 mb-8 slide-in-left">Articles liés</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% for relatedArticle in relatedArticles %}
                    <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 slide-in-up" 
                             style="animation-delay: {{ loop.index0 * 0.1 }}s">
                        <div class="aspect-w-16 aspect-h-9">
                            <img src="{{ relatedArticle.imageUrl }}" 
                                 alt="{{ relatedArticle.title }}" 
                                 class="w-full h-48 object-cover">
                        </div>
                        <div class="p-6">
                            <h4 class="font-serif font-semibold text-gray-900 mb-2 hover:text-leparisien-red transition-colors">
                                <a href="#">{{ relatedArticle.title }}</a>
                            </h4>
                            <div class="flex items-center text-sm text-gray-600">
                                <i data-feather="clock" class="w-4 h-4 mr-1"></i>
                                <span>
                                    <time datetime="{{ relatedArticle.publishedAt|date('c') }}">
                                        {{ relatedArticle.publishedAt|date('d/m/Y à H:i') }}
                                    </time>
                                </span>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        </div>
    </section>

</div>
{% endblock %}
