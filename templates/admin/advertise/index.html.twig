{% extends 'admin/dashboard.html.twig' %}

{% block title %}Gestion des publicit√©s{% endblock %}

{% block in_body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>PhoneNumber</th>
                <th>Email</th>
                <th>ImageUrl</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Company</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for advertise in advertises %}
            <tr>
                <td>{{ advertise.id }}</td>
                <td>{{ advertise.title }}</td>
                <td>{{ advertise.description }}</td>
                <td>{{ advertise.phoneNumber }}</td>
                <td>{{ advertise.email }}</td>
                <td>{{ advertise.imageUrl }}</td>
                <td>{{ advertise.createdAt ? advertise.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ advertise.updatedAt ? advertise.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ advertise.company }}</td>
                <td>
                    <a href="{{ path('app_advertise_show', {'id': advertise.id}) }}">show</a>
                    <a href="{{ path('app_advertise_edit', {'id': advertise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_advertise_new') }}">Create new</a>
{% endblock %}
