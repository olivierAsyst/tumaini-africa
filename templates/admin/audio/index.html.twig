{% extends 'admin/dashboard.html.twig' %}

{% block title %}Audio index{% endblock %}

{% block in_body %}
    <h1>Audio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>File</th>
                <th>Cover</th>
                <th>Duration</th>
                <th>PublishedAt</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for audio in audio %}
            <tr>
                <td>{{ audio.id }}</td>
                <td>{{ audio.title }}</td>
                <td>{{ audio.description }}</td>
                {# <td>
                    <audio controls>
                        <source src="{{ vich_uploader_asset(audio, 'audios') }}" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                </td>
                <td><img src="{{ vich_uploader_asset(audio, 'acover') }}" alt="{{ audio.title }}"/></td> #}
                <td>{{ audio.duration }}</td>
                <td>{{ audio.publishedAt ? audio.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ audio.createdAt ? audio.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ audio.updatedAt ? audio.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ audio.slug }}</td>
                <td>
                    <a href="{{ path('app_audio_show', {'id': audio.id}) }}">show</a>
                    <a href="{{ path('app_audio_edit', {'id': audio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_audio_new') }}">Create new</a>
{% endblock %}
