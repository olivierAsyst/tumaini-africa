{% extends 'base.html.twig' %}

{% block title %}Nos podcasts !{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="relative bg-gradient-to-r from-orange-500 to-red-800 rounded-2xl overflow-hidden shadow-xl">
        <div class="py-2 px-2 mx-auto max-w-screen-xl text-center lg:py-4 lg:px-3">
            <div class="relative z-10 container-custom py-12 md:py-16">
                <div class="max-w-3xl text-white">
                    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Nos Emissions</h1>
                    <p class="text-xl text-yellow-100 mb-6">Découvrez nos émissions et podcasts audio pour approfondir l'actualité où que vous soyez</p>
                    <div class="flex flex-wrap gap-3">
                        <a href="#latest-podcasts" class="btn bg-white text-yellow-900 hover:bg-yellow-50 p-2 rounded">Derniers podcasts</a>
                        <a href="#categories" class="btn bg-transparent text-white rounded border border-white hover:bg-white/10">Parcourir par catégorie</a>
                    </div>
                </div>
            </div>
            <div class="absolute inset-0 opacity-20 pointer-events-none">
                <img src="https://images.unsplash.com/photo-1486596538271-46f894196564?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Podcasts" class="w-full h-full object-cover">
            </div>
            <div class="absolute right-10 bottom-0 lg:block">
                <svg xmlns="http://www.w3.org/2000/svg" width="250" height="250" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="text-white/20">
                    <path d="M3 18v-6a9 9 0 0 1 18 0v6"></path>
                    <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"></path>
                </svg>
            </div>
        </div>
    </section>

    {# Latest Podcasts #}
    <section id="latest-podcasts" class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Nos derniers podcasts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {% for audio in audios %}
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="md:flex">
                        <div class="relative md:w-1/3 h-48 md:h-auto overflow-hidden bg-yellow-100">
                            <img src="{{ vich_uploader_asset(audio, 'coverFile') }}" alt="{{ audio.title }}" class="w-full h-full object-cover">
                            <div class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 hover:opacity-100 transition-opacity duration-300">
                                <a href="{{ path('app_audio_show', {'id': audio.id}) }}" class="bg-white rounded-full p-3 shadow-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                        <div class="p-6 md:w-2/3">
                            <div class="flex items-center mb-2">
                                <a href="#" class="text-xs font-medium text-primary bg-yellow-50 px-2 py-1 rounded-md mr-3">{{ audio.category.name }}</a>
                                <span class="text-sm text-gray-500">{{ audio.duration }} min</span>
                            </div>
                            <a href="{{ path('app_audio_show', {'id': audio.id}) }}" class="block">
                                <h3 class="text-xl font-bold mb-3 hover:text-primary transition-colors duration-200">{{ audio.title }}</h3>
                            </a>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{ audio.description }}</p>
                            <div class="flex justify-between items-center">
                                <div class="flex items-center">
                                    <img src="images/static/default.png" alt="{{ audio.author.firstname }}" class="w-8 h-8 rounded-full mr-2 object-cover">
                                    <span class="text-sm text-gray-700">{{ audio.author.firstname }}</span>
                                </div>
                                <span class="text-sm text-gray-500">{{ audio.publishedAt|date("d/m/Y") }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

