<div class="small-podcast" data-podcast-id="{{ podcast.id }}">
    <div class="small-podcast-content">
        <!-- Couverture compacte -->
        <div class="small-cover-container">
            <div class="small-podcast-cover {{ podcast.coverGradient }}">
                <div class="small-cover-overlay"></div>
                <div class="small-play-button-container">
                    <button class="small-play-button" data-action="play-pause" data-podcast-id="{{ podcast.id }}">
                        <svg class="play-icon" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polygon points="5,3 19,12 5,21"></polygon>
                        </svg>
                        <svg class="pause-icon hidden" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="6" y="4" width="4" height="16"></rect>
                            <rect x="14" y="4" width="4" height="16"></rect>
                        </svg>
                    </button>
                </div>
                <div class="small-shine-effect"></div>
            </div>
        </div>

        <!-- Titre et durÃ©e -->
        <div class="small-podcast-info">
            <h3 class="small-podcast-title">{{ podcast.title }}</h3>
            <span class="small-duration-badge">{{ podcast.duration }} min</span>
        </div>
    </div>
</div>