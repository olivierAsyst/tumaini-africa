
{% extends 'base.html.twig' %}

{% block title %}Podcast Pulse{% endblock %}

{% block audio %}
<div class="podcast-container">
    <div class="container">
        <div class="header">
            <p class="main-title">Podcast Pulse</p>
            <p class="subtitle">Découvrez les podcasts les plus captivants</p>
        </div>
        
        <div class="podcast-showcase">
            <!-- Podcast en vedette -->
            {% if podcasts|length > 0 %}
                {% include 'client_podcast/_featured_podcast.html.twig' with {'podcast': podcasts[0]} %}
            {% endif %}
            
            <!-- Podcasts secondaires -->
            {% if podcasts|length > 1 %}
                <div class="other-episodes">
                    <h2 class="section-title">Autres épisodes</h2>
                    {% for podcast in podcasts[1:] %}
                        {% include 'client_podcast/_small_podcast.html.twig' with {'podcast': podcast} %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Lecteur audio global -->
    <div id="audio-player" class="audio-player hidden">
        {% include 'client_podcast/_audio_player.html.twig' %}
    </div>
</div>
{% endblock %}