<div class="audio-player-content">
    <audio id="audio-element"></audio>
    
    <div class="player-container">
        <!-- Info du podcast -->
        <div class="player-podcast-info">
            <div id="player-cover" class="player-cover"></div>
            <div class="player-text">
                <h4 id="player-title" class="player-title"></h4>
                <p class="player-status">En cours de lecture</p>
            </div>
        </div>

        <!-- ContrÃ´les de lecture -->
        <div class="player-controls">
            <button id="skip-back" class="control-button">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="19,20 9,12 19,4"></polygon>
                    <line x1="5" y1="19" x2="5" y2="5"></line>
                </svg>
            </button>
            
            <button id="play-pause-main" class="main-play-button">
                <svg class="play-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="5,3 19,12 5,21"></polygon>
                </svg>
                <svg class="pause-icon hidden" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="6" y="4" width="4" height="16"></rect>
                    <rect x="14" y="4" width="4" height="16"></rect>
                </svg>
            </button>
            
            <button id="skip-forward" class="control-button">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="5,4 15,12 5,20"></polygon>
                    <line x1="19" y1="5" x2="19" y2="19"></line>
                </svg>
            </button>
        </div>

        <!-- Barre de progression -->
        <div class="progress-container">
            <span id="current-time" class="time-display">0:00</span>
            <input type="range" id="progress-bar" class="progress-bar" min="0" max="100" value="0">
            <span id="total-time" class="time-display">0:00</span>
        </div>

        <!-- ContrÃ´le du volume -->
        <div class="volume-container">
            <svg class="volume-icon" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="11,5 6,9 2,9 2,15 6,15 11,19"></polygon>
                <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"></path>
            </svg>
            <input type="range" id="volume-bar" class="volume-bar" min="0" max="1" step="0.1" value="1">
        </div>

        <!-- Bouton fermer -->
        <button id="close-player" class="close-button">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>
</div>