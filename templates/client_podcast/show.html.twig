{% extends 'base.html.twig' %}

{% block title %}{{ audio.title }} - Podcasts - ActualitésNet{% endblock %}

{% block stylesheets %}
<style>
    .progress-container {
        position: relative;
        cursor: pointer;
    }
    .progress {
        background: rgba(200, 200, 200, 0.3);
        border-radius: 9999px;
        overflow: hidden;
    }
    .progress-bar {
        background: #1a56db;
        height: 100%;
        transition: width 0.1s ease;
    }
    .volume-control {
        -webkit-appearance: none;
        appearance: none;
        height: 5px;
        background: rgba(200, 200, 200, 0.3);
        border-radius: 9999px;
        outline: none;
    }
    .volume-control::-webkit-slider-thumb {
        -webkit-appearance: none;
        appearance: none;
        width: 12px;
        height: 12px;
        background: #1a56db;
        border-radius: 50%;
        cursor: pointer;
    }
</style>
{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('app_audio_index') }}" class="inline-flex items-center text-primary hover:text-blue-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Retour aux podcasts
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-md overflow-hidden mb-10">
        <div class="md:flex">
            {# Cover Image #}
            <div class="md:w-1/3 relative">
                <img src="{{ audio.cover }}" alt="{{ audio.title }}" class="w-full h-full object-cover md:h-auto md:min-h-full">
                <div class="absolute top-0 left-0 m-4">
                    <a href="#" class="bg-primary px-3 py-1 rounded text-sm font-medium text-white">{{ audio.category.name }}</a>
                </div>
            </div>
            
            {# Podcast Info #}
            <div class="p-6 md:p-8 md:w-2/3">
                <div class="flex items-center text-sm text-gray-500 mb-2">
                    <span>{{ audio.publishedAt|date("d/m/Y") }}</span>
                    <span class="mx-2">•</span>
                    <span>{{ audio.duration }} min</span>
                </div>
                <h1 class="text-2xl md:text-3xl font-bold mb-4">{{ audio.title }}</h1>
                
                {# Audio Player #}
                <div class="mb-8 bg-gray-50 rounded-lg p-4 audio-player">
                    <audio src="{{ audio.file }}" preload="metadata"></audio>
                    
                    <div class="flex items-center gap-3 mb-3">
                        <button class="play-button bg-primary text-white rounded-full p-3 hover:bg-blue-700 focus:outline-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </button>
                        <button class="pause-button bg-primary text-white rounded-full p-3 hover:bg-blue-700 focus:outline-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </button>
                        
                        <div class="flex-grow">
                            <div class="progress-container">
                                <div class="progress h-2">
                                    <div class="progress-bar w-0"></div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-sm text-gray-500 flex gap-1 min-w-[8ch]">
                            <span class="current-time">0:00</span>
                            <span>/</span>
                            <span class="duration">0:00</span>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-center">
                        <div class="flex items-center gap-2 w-24">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15.536a5 5 0 01.001-7.072m-2.829 9.9a9 9 0 010-12.728" />
                            </svg>
                            <input type="range" class="volume-control" min="0" max="1" step="0.1" value="1">
                        </div>
                        
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-gray-600">Vitesse:</span>
                            <select class="playback-speed bg-white border border-gray-300 text-gray-700 text-sm rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-primary">
                                <option value="0.5">0.5x</option>
                                <option value="0.75">0.75x</option>
                                <option value="1" selected>1x</option>
                                <option value="1.25">1.25x</option>
                                <option value="1.5">1.5x</option>
                                <option value="2">2x</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                {# Author Info #}
                <div class="flex items-center mb-6">
                    <img src="{{ audio.author.avatar }}" alt="{{ audio.author.name }}" class="w-12 h-12 rounded-full mr-4 object-cover">
                    <div>
                        <div class="font-medium">{{ audio.author.name }}</div>
                        <div class="text-sm text-gray-500">{{ audio.author.bio }}</div>
                    </div>
                </div>
                
                {# Sharing Options #}
                <div class="flex flex-wrap gap-3 mb-6">
                    <span class="text-gray-500 text-sm">Partager ce podcast :</span>
                    <a href="#" class="text-gray-500 hover:text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-6 w-6 fill-current">
                            <path d="M504 256C504 119 393 8 256 8S8 119 8 256c0 123.78 90.69 226.38 209.25 245V327.69h-63V256h63v-54.64c0-62.15 37-96.48 93.67-96.48 27.14 0 55.52 4.84 55.52 4.84v61h-31.28c-30.8 0-40.41 19.12-40.41 38.73V256h68.78l-11 71.69h-57.78V501C413.31 482.38 504 379.78 504 256z"/>
                        </svg>
                    </a>
                    <a href="#" class="text-gray-500 hover:text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-6 w-6 fill-current">
                            <path d="M459.37 151.716c.325 4.548.325 9.097.325 13.645 0 138.72-105.583 298.558-298.558 298.558-59.452 0-114.68-17.219-161.137-47.106 8.447.974 16.568 1.299 25.34 1.299 49.055 0 94.213-16.568 130.274-44.832-46.132-.975-84.792-31.188-98.112-72.772 6.498.974 12.995 1.624 19.818 1.624 9.421 0 18.843-1.3 27.614-3.573-48.081-9.747-84.143-51.98-84.143-102.985v-1.299c13.969 7.797 30.214 12.67 47.431 13.319-28.264-18.843-46.781-51.005-46.781-87.391 0-19.492 5.197-37.36 14.294-52.954 51.655 63.675 129.3 105.258 216.365 109.807-1.624-7.797-2.599-15.918-2.599-24.04 0-57.828 46.782-104.934 104.934-104.934 30.213 0 57.502 12.67 76.67 33.137 23.715-4.548 46.456-13.32 66.599-25.34-7.798 24.366-24.366 44.833-46.132 57.827 21.117-2.273 41.584-8.122 60.426-16.243-14.292 20.791-32.161 39.308-52.628 54.253z"/>
                        </svg>
                    </a>
                    <a href="#" class="text-gray-500 hover:text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="h-6 w-6 fill-current">
                            <path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"/>
                        </svg>
                    </a>
                    <a href="#" class="text-gray-500 hover:text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-6 w-6 fill-current">
                            <path d="M328 256c0 39.8-32.2 72-72 72s-72-32.2-72-72 32.2-72 72-72 72 32.2 72 72zm104-72c-39.8 0-72 32.2-72 72s32.2 72 72 72 72-32.2 72-72-32.2-72-72-72zm-352 0c-39.8 0-72 32.2-72 72s32.2 72 72 72 72-32.2 72-72-32.2-72-72-72z"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="p-6 md:p-8 border-t border-gray-200">
            <h2 class="text-xl font-bold mb-4">Description</h2>
            <div class="prose prose-lg max-w-none">
                {{ audio.description|nl2br }}
            </div>
        </div>
    </div>

    {# Comments Section #}
    <section class="bg-white rounded-xl shadow-md overflow-hidden mb-12 comments-section">
        <div class="p-6 md:p-8">
            <h2 class="text-2xl font-bold mb-6">Commentaires ({{ comments|length }})</h2>
            
            {# Formulaire de commentaire #}
            <div class="mb-8 pb-8 border-b border-gray-200">
                <form>
                    <div class="mb-4">
                        <textarea 
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" 
                            rows="4" 
                            placeholder="Rejoindre la discussion..."></textarea>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="btn btn-primary">
                            Publier mon commentaire
                        </button>
                    </div>
                </form>
            </div>
            
            {# Liste des commentaires #}
            {% if comments|length > 0 %}
                <div class="space-y-6">
                    {% for comment in comments %}
                        <div class="flex gap-4">
                            <img src="{{ comment.author.avatar }}" alt="{{ comment.author.name }}" class="w-10 h-10 rounded-full object-cover mt-1">
                            <div class="flex-1">
                                <div class="flex justify-between items-center mb-2">
                                    <h3 class="font-medium">{{ comment.author.name }}</h3>
                                    <span class="text-gray-500 text-sm">{{ comment.createdAt|date("d/m/Y à H:i") }}</span>
                                </div>
                                <p class="text-gray-700 mb-3">{{ comment.content }}</p>
                                <div class="flex items-center gap-4 text-sm">
                                    <button class="flex items-center text-gray-500 hover:text-primary" data-comment-id="{{ comment.id }}" data-action="like">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                                        </svg>
                                        <span class="like-count">{{ comment.likes }}</span>
                                    </button>
                                    <button class="flex items-center text-gray-500 hover:text-secondary" data-comment-id="{{ comment.id }}" data-action="dislike">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14H5.236a2 2 0 01-1.789-2.894l3.5-7A2 2 0 018.736 3h4.018a2 2 0 01.485.06l3.76.94m-7 10v5a2 2 0 002 2h.096c.5 0 .905-.405.905-.904 0-.715.211-1.413.608-2.008L17 13V4m-7 10h2" />
                                        </svg>
                                        <span class="dislike-count">{{ comment.dislikes }}</span>
                                    </button>
                                    <button class="text-gray-500 hover:text-primary">
                                        Répondre
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-8 text-gray-500">
                    Soyez le premier à commenter ce podcast !
                </div>
            {% endif %}
        </div>
    </section>

    {# Similar Podcasts #}
    {% if similarAudios|length > 0 %}
        <section>
            <h2 class="text-2xl font-bold mb-6">Podcasts similaires</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {% for audio in similarAudios %}
                    <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        <div class="md:flex">
                            <div class="relative md:w-1/3 h-48 md:h-auto overflow-hidden bg-blue-100">
                                <img src="{{ audio.cover }}" alt="{{ audio.title }}" class="w-full h-full object-cover">
                                <div class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 hover:opacity-100 transition-opacity duration-300">
                                    <a href="{{ path('app_audio_show', {'id': audio.id}) }}" class="bg-white rounded-full p-3 shadow-md">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </a>
                                </div>
                            </div>
                            <div class="p-6 md:w-2/3">
                                <div class="flex items-center mb-2">
                                    <a href="#" class="text-xs font-medium text-primary bg-blue-50 px-2 py-1 rounded-md mr-3">{{ audio.category.name }}</a>
                                    <span class="text-sm text-gray-500">{{ audio.duration }} min</span>
                                </div>
                                <a href="{{ path('app_audio_show', {'id': audio.id}) }}" class="block">
                                    <h3 class="text-xl font-bold mb-3 hover:text-primary transition-colors duration-200">{{ audio.title }}</h3>
                                </a>
                                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{ audio.description }}</p>
                                <div class="flex justify-between items-center">
                                    <span class="text-sm text-gray-700">Par {{ audio.author.name }}</span>
                                    <span class="text-sm text-gray-500">{{ audio.publishedAt|date("d/m/Y") }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/audioPlayer.js') }}"></script>
<script src="{{ asset('js/comments.js') }}"></script>
{% endblock %}